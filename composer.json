{
  "require-dev": {
    "phpunit/phpunit": "7.*",
    "squizlabs/php_codesniffer": "3.*",
    "wp-coding-standards/wpcs": "*"
  },
  "scripts": {

    "phpcs": [
      "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "phpcs -p -s -v --standard=codesniffer.ruleset.xml ./layout-optimizer.php"
    ],
    "phpcbf": [
      "phpcbf --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "phpcbf -p -s -v --standard=codesniffer.ruleset.xml ./layout-optimizer.php"
    ]
  }
}
